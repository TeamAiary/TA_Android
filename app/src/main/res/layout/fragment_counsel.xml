<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9F6F1"
    tools:context=".ui.counsel.CounselFragment">

    <TextView
        android:id="@+id/tv_counsel_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주변 상담소"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="22sp"
        android:background="#FFF8E1"
        android:padding="16dp"
        android:textColor="#222222" />

    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#E0E0E0"
        android:layout_margin="16dp" />

    <TextView
        android:id="@+id/tv_counsel_notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="상담소를 선택하면 정보가 표시됩니다."
        android:textColor="#333333"
        android:textSize="16sp"
        android:padding="8dp"
        android:background="#FFFDE7"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_margin="16dp"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상담소 세부 정보"
            android:textColor="#222222"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tv_counsel_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F5F5" />

    </LinearLayout>

</LinearLayout> 